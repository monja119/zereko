<! DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%-title %></title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/fontawesome/css/fontawesome.css">

</head>
<body>
<div class="container-fluid">
    <div class="row mt-1">
        <button
                class="btn btn-danger col-12"
                onclick="window.location.href='/logout'"
        >
            Déconnexion
        </button>
    </div>
    <div class="row mt-3">
        <button class="btn btn-secondary col-4">
            <%- user.login %>
        </button>
    </div>
    <div class="row mt-3">
        <button
                onclick="window.location.href='/'"
                class="btn btn-sm small col-1 ml-1 border">
            Retour
        </button>
    </div>


    <div class="row mt-2 justify-content-center align-items-center">
        <div class="login-box col-xl-6 col-lg-6 col-md-10 col-sm-11 p-2">
            <div class="card border-0 shadow">
                <div class="card-body login-card-body">
                    <form action="/articles" method="post" class="px-3">
                        <p class="login-box-msg my-3 mb-4">Veuiller completer les champs</p>
                        <% if (error) { %><p class="alert alert-danger"><%-error %></p><% } %>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Titre" name="title" required>
                        </div>
                        <div class="input-group mb-3">
                            <textarea class="form-control" placeholder="Contenu" name="content" rows="10" required></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block h-100 w-100">Créer</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>