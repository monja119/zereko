<! DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%-title %></title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/fontawesome/css/fontawesome.css">

</head>
<body>
<div class="container-fluid">
    <div class="row mt-1">
        <button
                class="btn btn-danger col-12"
                onclick="window.location.href='/logout'"
        >
            Déconnexion
        </button>
    </div>
    <div class="row mt-3">
        <button class="btn btn-secondary col-4">
            <%- user.login %>
        </button>
    </div>
    <div class="row mt-3">
        <button
                onclick="window.location.href='/'"
                class="btn btn-sm small col-1 ml-1 border">
            Retour
        </button>
    </div>


    <div class="row mt-2 justify-content-center align-items-center">
        <div class="login-box col-xl-6 col-lg-6 col-md-10 col-sm-11 p-2">
            <div class="card border-0 shadow">
                <div class="card-header bg-white border-0">
                    <h3 class="text-center"><%- article.title%></h3>
                    <span class="small">
                        <%-author.login%>
                    </span>
                    <br>
                    <span class="small opacity-75">
                        <%-
                        'Le ' + article.date.slice(8, 10) + '/' + article.date.slice(5, 7) + '/' + article.date.slice(0, 4) +
                        ' à ' + article.date.slice(11, 13) + 'h' + article.date.slice(14, 16) + 'min' + article.date.slice(17, 19) + 's'
                        %>
                    </span>
                </div>
                <div class="card-body">
                    <p class="">
                        <%- article.content %>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>